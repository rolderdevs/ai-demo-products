{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/index.ts": {
      "runtime": "@godsreveal/vercel-bun@0.2.4"
    }
  },
  "buildCommand": "cp -f package.prod.json package.json && bun install && bun run build",
  "rewrites": [{ "source": "/api/(.*)", "destination": "/api/index.ts" }]
}
